#!/bin/bash
cd "$HOME" || exit
AFIDE="$HOME/.afide"

system_type=$(uname -s)

sudo=$(command -v sudo)

if [ "$system_type" = "Darwin" ]; then
    if ! command -v brew >/dev/null 2>&1; then
        echo "Installing homebrew"
        /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
    fi
    echo "Updating homebrew bundles"
    cd "$HOME" && brew doctor && brew bundle --global
else
    $sudo apt-get update 
    $sudo apt-get install -y tmux zsh direnv
    curl -sfL https://github.com/neovim/neovim/releases/download/v0.3.8/nvim.appimage | sudo sh -s - -b /usr/local/bin
    curl -sfL git.io/antibody | sudo sh -s - -b /usr/local/bin
fi
if [ ! -f "$HOME/.local/share/nvim/site/autoload/plug.vim" ]; then
	curl -sfLo ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
		https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
fi
pip3 install pynvim
nvim '+PlugUpdate' '+PlugClean!' '+PlugUpdate' '+qall'

# Bootstrap tmux
if [ ! -d "$HOME/.tmux/plugins/tpm" ]; then
    mkdir -p "$HOME/.tmux/plugins"
    # installing tmux-plugin-manager and plugins
    git clone https://github.com/tmux-plugins/tpm "$HOME/.tmux/plugins/tpm"
    "$HOME"/.tmux/plugins/tpm/bin/install_plugins
else
    # updating tpm and plugins
    cd "$HOME/.tmux/plugins/tpm"
    git pull -p
    cd "$HOME"
    "$HOME"/.tmux/plugins/tpm/bin/update_plugins all
fi
# termino
tic "$HOME/.terminfo/xterm-256color-italic.terminfo"
chsh -s "$(command -v zsh)"
